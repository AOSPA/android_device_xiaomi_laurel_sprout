# Camera
/mnt/vendor/persist/camera(/.*)?                                                               u:object_r:persist_camera_file:s0

# Fingerprint
/dev/goodix_fp                                                                                 u:object_r:fingerprint_device:s0
/data/vendor/goodix(/.*)?                                                                      u:object_r:fingerprint_data_file:s0

# Fingerprint Sysfs nodes
/sys/devices/platform/soc/5e00000.qcom,mdss_mdp/drm/card0/card0-DSI-1/disp_param               u:object_r:vendor_sysfs_fod:s0
/sys/class/touch/tp_dev/fod_status                                                             u:object_r:vendor_sysfs_fod:s0
/sys/devices/platform/soc/4a88000.i2c/i2c-1/1-0038/touch/tp_dev/fod_status                     u:object_r:vendor_sysfs_fod:s0

# IR
/dev/spidev[0-9]\.1                                                                            u:object_r:lirc_device:s0
